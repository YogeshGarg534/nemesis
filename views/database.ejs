<!DOCTYPE html>
<html>

<head>
    <title>Database</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300" />
    <style type="text/css">
        body {
            font-family: "Source Sans Pro", sans-serif;
            color: white;
            font-weight: 300;
            background: #50a3a2;
            width: 100%;
            height: 100%;
        }
        
        h1 {
            font-size: 40px;
            font-weight: 200;
            text-align: center;
        }
        
        table {
            border: 1px solid black;
            text-align: center;
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
            margin-top: 10rem;
        }
        
        th,
        td {
            border: 1px solid black;
            padding: 15px;
        }
        
        button {
            appearance: none;
            outline: 0;
            background-color: white;
            border: 0;
            padding: 10px 15px;
            color: #50a3a2;
            border-radius: 3px;
            width: 100px;
            font-size: 18px;
        }
        
        button:hover {
            background-color: red;
        }
    </style>
</head>

<body>
    <div class="Datatable">
        <h1>User Data</h1>
        <table>
            <tr>
                <th>Username</th>
                <th>Mobile Number</th>
                <th>Email</th>
                <th>Address</th>

            </tr>
            <% users.forEach(function(user){ %>
                <tr>
                    <td>
                        <%= user.username%>
                    </td>
                    <td>
                        <%= user.Mobile%>
                    </td>
                    <td>
                        <%= user.email%>
                    </td>
                    <td>
                        <%= user.address%>
                    </td>

                    <td><a href="/delete/<%=user.id%>"><button>DELETE</button></a></td>

                </tr>
                <% }) %>
        </table>
    </div>
</body>

</html>